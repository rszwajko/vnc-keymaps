{
  "verbose": true,
  "roots": [
    "<rootDir>/src",
    "<rootDir>/tests"
  ],
  "modulePaths": [
    "<rootDir>/src",
    "<rootDir>/tests"
  ],
  "preset": "ts-jest/presets/js-with-ts",
  "testEnvironment": "node",
  "testPathIgnorePatterns": [
    "<rootDir>/node_modules/",
    "<rootDir>/dist/"
  ],
  "transform": {
    "^.+\\.ts$": "ts-jest"
  },
  "testMatch": [
    "<rootDir>/tests/**/*.test.ts"
  ]
}